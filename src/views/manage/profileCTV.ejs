            totalwithdrawTodayBySelectedDate = 0
            let timeDate = $(this).val();
            $.ajax({
                type: "POST",
                url: "/admin/manager/infoCtv/select",
                data: {
                    timeDate: timeDate,
                    phone: "<%=phone%>",
